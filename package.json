{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run --scope soya-next* --ignore soya-next-server build",
    "build:examples": "lerna run --ignore soya-next* build",
    "clean": "rimraf examples/*/{.next,out} packages/*/lib",
    "clean:all": "yarn clean && lerna clean",
    "coverage": "yarn test --coverage",
    "coveralls": "yarn coverage && cat ./coverage/lcov.info | coveralls",
    "export:examples": "lerna run --ignore soya-next* --ignore apollo --ignore base-path --ignore i18n* export",
    "lint": "marlint",
    "prepublish": "yarn clean && yarn build",
    "publish": "lerna publish",
    "test": "jest",
    "watch": "yarn build -w"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.1",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "apollo-client": "^2.3.8",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "config": "^2.0.1",
    "coveralls": "^3.0.2",
    "express": "^4.16.3",
    "graphql": "^14.0.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-environment-jsdom": "^26.6.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "marlint": "^7.0.1",
    "next": "^9.5.3",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-apollo": "^2.2.1",
    "react-cookie": "^2.2.0",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.3",
    "react-test-renderer": "^17.0.2",
    "redux": "^4.0.5",
    "rimraf": "^2.6.2",
    "typescript": "^4.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,mdx}": "prettier --write"
  },
  "marlint": {
    "ignores": [
      "**/.idea/**",
      "**/.next/**",
      "**/examples/**",
      "**/lib/**"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "testEnvironment": "jest-environment-jsdom",
    "testPathIgnorePatterns": [
      "/examples/",
      "/lib/"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
