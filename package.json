{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna exec --scope soya-next* -- babel src -d lib --ignore __tests__",
    "clean": "rimraf examples/*/.next packages/*/lib",
    "clean-all": "yarn run clean && lerna clean",
    "coverage": "yarn test -- --coverage",
    "coveralls": "yarn run coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "marlint",
    "lint:fix": "yarn run lint -- --fix",
    "postinstall": "lerna bootstrap",
    "precommit": "lint-staged",
    "prepublish": "yarn run clean && yarn run build",
    "publish": "lerna publish",
    "test": "NODE_CONFIG_DIR=./packages/soya-next/config jest",
    "watch": "yarn run build -- -w"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^2.13.1",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "express": "^4.15.3",
    "husky": "^0.14.0",
    "jest": "^20.0.4",
    "lerna": "^2.0.0",
    "lint-staged": "^4.0.0",
    "marlint": "^6.0.0",
    "next": "beta",
    "react": "^15.6.1",
    "react-cookie": "^2.0.8",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-test-renderer": "^15.6.1",
    "redux": "^3.7.2",
    "rimraf": "^2.6.1"
  },
  "lint-staged": {
    "*.js": [
      "lint:fix",
      "git add"
    ]
  },
  "marlint": {
    "envs": [
      "browser",
      "es6",
      "jest",
      "node"
    ],
    "ignores": [
      "**/.next/**",
      "**/coverage/**",
      "**/node_modules/**",
      "**/lib/**"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/forbid-prop-types": "warn",
      "react/jsx-no-literals": "off",
      "max-nested-callbacks": [
        "error",
        {
          "max": 5
        }
      ]
    }
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/examples/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*).(spec|test).js?(x)"
    ]
  }
}
